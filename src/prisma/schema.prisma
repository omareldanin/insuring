generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
  PARTNER
}

enum UserGender {
  male
  female
}

enum InsuranceTypeEnum {
  CAR
  HEALTH
  LIFE
}

enum CarTypeEnum {
  used
  new
}

enum CompanyTypeEnum {
  SOLIDARITY
  COMMERCIAL
}

enum CarRuleType {
  RANGE
  GROUP
}

model User {
  id             Int              @id @default(autoincrement())
  phone          String           @unique
  name           String
  email          String           @unique
  gender         UserGender
  avatar         String?
  fcm            String[]
  password       String
  refresh_tokens String[]
  role           UserRole
  notifications  Notification[]
  deleted        Boolean          @default(false)
  active         Boolean          @default(true)
  verified       Boolean          @default(false)
  deletedAt      DateTime?
  birthDate      DateTime?
  // relations---------------------------------------------------------------------//
  partner        Partner?
  admin          Admin?
  passwordReset  PasswordReset[]
  sessions       RefreshSession[]
  // --- OTHER ---------------------------------------------------------------------//
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model RefreshSession {
  id        Int      @id @default(autoincrement())
  token     String
  fcm       String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
}

model Admin {
  id   Int  @id
  user User @relation(fields: [id], references: [id], onDelete: Cascade)
}

model Partner {
  id   Int  @id
  user User @relation(fields: [id], references: [id], onDelete: Cascade)
  //-------------------------------------------------------------------------------
}

model PhoneOtp {
  id        Int      @id @default(autoincrement())
  phone     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String
  expiresAt DateTime
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  // --- IDENTIFICATION --------------------------------------------------------------------- //
  id        Int      @id @default(autoincrement())
  // --- DETAILS --------------------------------------------------------------------------- //
  title     String
  content   String   @default("")
  // --- FOREIGN KEYS --------------------------------------------------------------------------- //
  userId    Int?
  // --- RELATIONS --------------------------------------------------------------------------- //
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  // --- STATUS --------------------------------------------------------------------------- //
  seen      Boolean  @default(false)
  // --- OTHER --------------------------------------------------------------------- //
  createdAt DateTime @default(now())

  @@index([userId])
}

model InsurancePlan {
  id            Int               @id @default(autoincrement())
  name          String
  arName        String?
  hint          String?
  arHint        String?
  description   String[]
  arDescription String[]
  recommend     Boolean           @default(false)
  insuranceType InsuranceTypeEnum
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  companyPlan   CompanyPlan[]
  healthRules   HealthRules[]
  lifeRules     LifeRules[]
  carRules      CarRules[]

  @@unique([name, insuranceType])
}

model InsuranceCompany {
  id             Int                 @id @default(autoincrement())
  name           String              @unique
  arName         String?
  logo           String?
  email          String              @unique
  ruleType       CarRuleType         @default(RANGE)
  companyType    CompanyTypeEnum
  insuranceTypes InsuranceTypeEnum[]
  companyPlans   CompanyPlan[]
  healthRules    HealthRules[]
  lifeRules      LifeRules[]
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  carRules       CarRules[]
}

model CompanyPlan {
  id         Int              @id @default(autoincrement())
  companyId  Int
  planId     Int
  company    InsuranceCompany @relation(fields: [companyId], references: [id], onDelete: Cascade)
  plan       InsurancePlan    @relation(fields: [planId], references: [id], onDelete: Cascade)
  features   String[]         @default(["third party liability", "stantard support"])
  arFeatures String[]         @default(["third party liability", "stantard support"])
  createdAt  DateTime         @default(now())

  @@unique([companyId, planId])
}

model CarMake {
  id             Int            @id @default(autoincrement())
  name           String         @unique
  normalizedName String         @unique
  models         CarModel[]
  createdAt      DateTime       @default(now())
  carRuleGroups  CarRuleGroup[]
}

model CarModel {
  id             Int            @id @default(autoincrement())
  name           String
  normalizedName String
  makeId         Int
  make           CarMake        @relation(fields: [makeId], references: [id], onDelete: Cascade)
  years          CarYear[]
  createdAt      DateTime       @default(now())
  carRuleGroups  CarRuleGroup[]

  @@unique([normalizedName, makeId])
}

model CarYear {
  id            Int            @id @default(autoincrement())
  year          Int
  minimumPrice  Int?           @default(0)
  modelId       Int
  model         CarModel       @relation(fields: [modelId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  carRuleGroups CarRuleGroup[]

  @@unique([year, modelId])
}

model HealthRules {
  id            Int               @id @default(autoincrement())
  from          Int
  to            Int
  gender        UserGender
  insuranceType InsuranceTypeEnum
  price         Int
  createdAt     DateTime          @default(now())

  planId             Int?
  plan               InsurancePlan?    @relation(fields: [planId], references: [id], onDelete: Cascade)
  insuranceCompany   InsuranceCompany? @relation(fields: [insuranceCompanyId], references: [id], onDelete: Cascade)
  insuranceCompanyId Int?
}

model LifeRules {
  id            Int               @id @default(autoincrement())
  from          Int
  to            Int
  gender        UserGender
  insuranceType InsuranceTypeEnum
  persitage     Float
  createdAt     DateTime          @default(now())

  planId             Int?
  plan               InsurancePlan?    @relation(fields: [planId], references: [id], onDelete: Cascade)
  insuranceCompany   InsuranceCompany? @relation(fields: [insuranceCompanyId], references: [id], onDelete: Cascade)
  insuranceCompanyId Int?
}

model CarRules {
  id       Int         @id @default(autoincrement())
  ruleType CarRuleType // ðŸ‘ˆ NEW

  // ===== RANGE RULE =====
  from Int?
  to   Int?

  // ===== GROUP RULE =====
  persitage Float

  type CarTypeEnum @default(new)

  insuranceType InsuranceTypeEnum
  createdAt     DateTime          @default(now())

  planId             Int?
  plan               InsurancePlan?    @relation(fields: [planId], references: [id], onDelete: Cascade)
  insuranceCompanyId Int?
  insuranceCompany   InsuranceCompany? @relation(fields: [insuranceCompanyId], references: [id], onDelete: Cascade)

  carGroups CarRuleGroup[]
}

model CarRuleGroup {
  id     Int      @id @default(autoincrement())
  ruleId Int
  rule   CarRules @relation(fields: [ruleId], references: [id], onDelete: Cascade)

  groupName String

  makeId  Int
  modelId Int?
  year    Int? // ðŸ‘ˆ store year directly (simpler than CarYear join)

  make      CarMake   @relation(fields: [makeId], references: [id])
  model     CarModel? @relation(fields: [modelId], references: [id])
  carYear   CarYear?  @relation(fields: [carYearId], references: [id])
  carYearId Int?

  @@index([groupName])
  @@index([makeId, modelId, year])
}
